{
  "name": "timekeeper",
  "private": true,
  "version": "0.0.1",
  "author": {
    "name": "TimeKeeper Team"
  },
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:electron": "tsc -p electron/tsconfig.json",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
    "start": "cross-env BROWSER=none npm run dev",
    "clean": "rimraf dist dist-electron release",
    "electron:build": "npm run clean && npm run build:electron && npm run build && electron-builder --win",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:db": "vitest -c vitest.database.config.ts",
    "prepare": "husky",
    "postinstall": "electron-builder install-app-deps"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@heroui/react": "^2.7.8",
    "@types/sqlite3": "^3.1.11",
    "@types/styled-components": "^5.1.34",
    "@types/uuid": "^10.0.0",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.11.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.0",
    "sqlite3": "^5.1.7",
    "styled-components": "^6.1.18",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@eslint/js": "^9.25.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/electron": "^1.4.38",
    "@types/node": "^22.15.17",
    "@types/react": "^19.1.3",
    "@types/react-dom": "^19.1.3",
    "@vitejs/plugin-react": "^4.4.1",
    "@vitest/coverage-v8": "^3.1.3",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^36.2.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.25.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^15.5.2",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5",
    "vite-plugin-electron": "^0.29.0",
    "vitest": "^3.1.3"
  },
  "build": {
    "appId": "com.timekeeper.app",
    "productName": "TimeKeeper",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/dist/**/*"
    ],
    "extraResources": [
      {
        "from": "electron/database.ts",
        "to": "database.ts",
        "filter": [
          "!*.db",
          "!*.sqlite",
          "!*.sqlite3"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis",
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "verifyUpdateCodeSignature": false
    },
    "linux": {
      "target": "AppImage"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    }
  }
}
