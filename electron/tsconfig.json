{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "../dist-electron",
    "rootDir": "..",
    "sourceMap": true,
    "baseUrl": "..",
    "paths": {
      "@/*": ["src/*"]
    },
    "composite": true
  },
  "include": ["./**/*.ts", "../src/types/**/*.ts", "../src/utils/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
